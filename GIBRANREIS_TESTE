.wrapper{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    font-weight: bold;
    text-align: center;
    }

.wrapper > *{
    padding: 49px;
    flex-grow: 1;
    flex-basis: 100%;
    }


header{background-color: darkgray;
       color:black;
    text-align: center;
       }
#main{
    padding: 10px;
    width: 100%;
    height: 100%;
}

#menu ul{padding: 0px;
         margin:0px;
         background-color: orangered;
          list-style: none;
         }
#menu ul li{  display:inline;
            }

#menu ul li a {
	padding: 2px 10px;
	display: inline-block;
	background-color:#EDEDED;
	color: #333;
	text-decoration: none;
	border-bottom:3px solid #EDEDED;
               }

#menu ul li a:hover {
	background-color:#D6D6D6;
	color: #6D6D6D;
	border-bottom:3px solid #EA0000;
}

.aside1 {background-color: white;
    color: black;
    text-align: left;
    
}

.aside2{background-color: darkgray;
    color: black;
    text-align: center;
    
}

footer{ background-color:black;
    color: white;
    padding: 2px 10px;
}



@media all and (min-width: 600px) {
  .aside { 
      flex-grow: 1;
      flex-basis:auto; 
    }
    .menu{ 
        flex-grow: 2;
        flex-basis:auto;
    }
}

@media all and (min-width: 800px) {
  .menu    { flex-grow: 3;
             flex-basis: 0px;
   }
  .aside1 { order: 1; } 
  .main    { order: 3; }
  
  .aside2 { order: 4; }
  footer  { order: 5; }
}
